<aiml version="2.0">

<category><pattern>HONOR</pattern>
<template>Sir</template></category>

<category><pattern>GREET</pattern>
<template>
<think><set name="t"><mctime type="todstring"/></set></think>
<condition name="t">
<li value="morning">Good morning, <srai>HONOR</srai>!</li>
<li value="afternoon">Good afternoon, <srai>HONOR</srai>!</li>
<li value="evening">Good evening, <srai>HONOR</srai>!</li>
<li value="night">
<random>
    <li>Good evening, <srai>HONOR</srai>. Shouldn't you be in bed?</li>
    <li>Good evening, <srai>HONOR</srai>.</li>
    <li>Hello, <srai>HONOR</srai>. The darkness weighs heavy.</li>
    <li>Hello, <srai>HONOR</srai>. It's a cold night.</li>
    <li>Hello, <srai>HONOR</srai>. It's dark out here.</li>
</random></li>
</condition>
</template>
</category>

<category><pattern>HELLO</pattern>
<template>
<srai>GREET</srai> 
Time since spawn: <sentinel cmd="timeSinceSpawn"/>
Time since attack: <sentinel cmd="timeSinceAttack"/>
Health: <sentinel cmd="health"/>
Guarding: <sentinel cmd="guarding"/>
</template>
</category>

<category><pattern>ht *</pattern>
<template>
<think><set name="t"><star/></set></think>
<condition name="t">
<li max="10">le 10</li>
<li min="10" max="20">11-20</li>
<li min="20" max="30">20-30</li>
<li min="30">30+</li>
<li>Not a number</li>
</condition>
</template>
</category>


        
<category><pattern>HOW ARE YOU</pattern><template><srai>HELLO</srai></template></category>


        
<category><pattern>WHAT * STATUS</pattern><template><srai>hello</srai></template></category>

<category><pattern>WHAT * TIME</pattern>
<template><srai>TIME</srai></template></category>
<category><pattern>WHAT TIME *</pattern>
<template><srai>TIME</srai></template></category>
        
<category><pattern>TIME</pattern>
<template>
    The time is <mctime type="digital"/>.
</template></category>

        
<category><pattern>ARE YOU READY</pattern><template>I'm always ready.</template></category>


        
<category><pattern>WHY ARE YOU HERE</pattern><template>I'm on guard.</template></category>


        
<category><pattern>WHY AM I HERE</pattern><template>That is an interesting question.</template></category>


        
<category><pattern>TELL ME A JOKE</pattern><template>I'm not here to joke.</template></category>

        
<category><pattern>REPORT</pattern><template><srai>Hello</srai></template></category>
<category><pattern>STATUS</pattern><template><srai>Hello</srai></template></category>


<category><pattern>DOING</pattern><template>I am on guard.</template></category>
<category><pattern>WHAT * DOING</pattern>
<template><srai>DOING</srai></template></category>
<category>

<pattern>WHATGUARDING</pattern><that>I AM ON GUARD</that>
<template>Everything.</template></category>
<category>
<pattern>WHATGUARDING</pattern>
<template>I am guarding everything.</template></category>

<category><pattern>GUARDING *</pattern>
<template><srai>WHATGUARDING</srai>
</template></category>
<category><pattern>WHAT * GUARDING</pattern>
<template><srai>WHATGUARDING</srai>
</template></category>


        


</aiml>
